pipeline {
    agent any
    
    environment {
        DOCKERHUB_CREDS = credentials('dockerhubcreds')
        IMAGE_NAME = 'gald10102/flask-aws-monitor'
    }
    
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'feature/pythonapp', url: 'https://github.com/gald10102/FinalExam.git'
            }
        }
        
        stage('Parallel Checks') {
            parallel {
                stage('Linting') {
                    steps {
                        script {
                            // Linting for Python (Flake8)
                            sh 'flake8 . || true'  
                            
                            // Linting for Shell (ShellCheck)
                            sh 'shellcheck *.sh || true'
                            
                            // Linting for Dockerfile (Hadolint)
                            sh 'hadolint Dockerfile || true'
                        }
                    }
                }
                
                stage('Security Scan') {
                    steps {
                        script {
                            // Security scan for Docker (Trivy)
                            sh 'trivy image --exit-code 1 --no-progress $IMAGE_NAME || true'
                            
                            // Security scan for Python (Bandit)
                            sh 'bandit -r . || true'
                        }
                    }
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image
                    sh """
                        cd pythonapp/
                        ls -l
                        docker build -t $IMAGE_NAME .
                    """
                }
            }
        }
        
        stage('Push to Docker Hub') {
            steps {
                script {
                    // Extract Docker Hub username and password from Jenkins credentials
                    def dockerHubUsername = DOCKERHUB_CREDS.username
                    def dockerHubPassword = DOCKERHUB_CREDS.password
            
                    // Debugging: Print Docker Hub username
                    echo "Logging into Docker Hub as: $dockerHubUsername"
            
                    // Log in to Docker Hub
                    sh """
                        echo $dockerHubPassword | docker login -u $dockerHubUsername --password-stdin
                    """
            
                    // Push the Docker image to Docker Hub
                    sh 'docker push $IMAGE_NAME'
                }
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed! Check logs for details.'
        }
    }
}
